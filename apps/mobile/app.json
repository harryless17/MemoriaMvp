{
  "expo": {
    "name": "Memoria",
    "slug": "memoria",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "automatic",
    "assetBundlePatterns": ["**/*"],
    "runtimeVersion": {
      "policy": "appVersion"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.memoria.app",
      "associatedDomains": ["applinks:memoria.app"]
    },
    "android": {
      "package": "com.memoria.app",
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "https",
              "host": "memoria.app",
              "pathPrefix": "/e"
            }
          ],
          "category": ["BROWSABLE", "DEFAULT"]
        }
      ]
    },
    "web": {
      "bundler": "metro"
    },
    "scheme": "memoria",
    "plugins": [
      "expo-router",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Memoria to access your camera to capture photos and videos."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow Memoria to access your photos to upload media."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}

